<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectTAIdePlot" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/white</item>

        <!-- Menghapus ActionBar atau Toolbar -->
        <item name="windowActionBar">false</item> <!-- Menonaktifkan ActionBar -->
        <item name="windowNoTitle">true</item>   <!-- Menghapus Title bar yang mungkin muncul -->

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ProjectTAIdePlot" parent="Base.Theme.ProjectTAIdePlot">
        <!-- Set background color to white -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Set status bar color to transparent (so splash screen background is visible) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Set navigation bar color if needed -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="HalamanUtama.ProjectTAIdePlot" parent="Base.Theme.ProjectTAIdePlot">
        <!-- Set background color to white -->

        <!-- Set status bar color to transparent (so splash screen background is visible) -->
        <item name="android:statusBarColor">#6B6143</item>
        <!-- Set navigation bar color if needed -->
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Hapus indikator aktif (hilangkan highlight bawah item aktif) -->
        <item name="colorControlActivated">@android:color/transparent</item>

        <!-- Hapus efek warna untuk item yang aktif di BottomNavigationView -->
        <item name="colorControlHighlight">@android:color/transparent</item>

        <!-- Pastikan BottomNavigationView tidak menggunakan accent yang default -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>


    </style>

    <style name="NoRippleBottomNav">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/nav_item_icon_tint</item>
        <item name="itemTextColor">@drawable/nav_item_text_tint</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Base.Theme.ProjectTAIdePlot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>